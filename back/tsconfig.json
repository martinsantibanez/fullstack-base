{
  "compilerOptions": {
    "preserveSymlinks": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": ".src",
    "paths": {
      "@/*": ["../../*"]
    }
  },
  "include": ["src/**/*", "ENVIRONMENT.ts"],
  "lib": ["es2017", "dom"]
}
